<UserControl x:Class="SLTConsole.WidgetControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"                          
             d:DesignHeight="100" Width="500">
    <Grid>
        <Label HorizontalAlignment="Left" Margin="33,46,0,16" VerticalAlignment="Center" Height="38" Width="150" FontSize="16" Name="lblPeakStatus" Content="xx/xx" FontFamily="Segoe UI Semibold"/>
        <Label HorizontalAlignment="Left" Margin="227,46,0,16" VerticalAlignment="Center" Height="38" Width="150" FontSize="16" Name="lblTotalStatus" Content="xx/xx" FontFamily="Segoe UI Semibold"/>
        <Label Content="Peak Usage&#xA;( GBs )" HorizontalAlignment="Left" Margin="33,19,0,0" VerticalAlignment="Top" Width="81" Height="27" FontStyle="Italic"/>
        <Label Content="Total Usage" HorizontalAlignment="Left" Margin="227,19,0,0" VerticalAlignment="Top" Width="81" Height="27" FontStyle="Italic"/>
        <Button Content="Logout" HorizontalAlignment="Left" Margin="415,68,0,0" VerticalAlignment="Top" Width="75" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Name="btnLogout"/>

    </Grid>
</UserControl>
